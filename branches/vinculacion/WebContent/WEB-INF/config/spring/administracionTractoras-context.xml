<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="AdministracionTractorasAction" class="mx.com.vgati.ccmx.vinculacion.tractoras.action.AdministracionTractorasAction"
		scope="prototype">
		<property name="tractorasService" ref="tractorasService" />
		<property name="initService" ref="initService" />
		<property name="pyMEsService" ref="pyMEsService" />
	</bean>

	<bean id="tractorasService"
		class="mx.com.vgati.ccmx.vinculacion.tractoras.service.imp.TractorasServiceImp">
		<property name="tractorasDao" ref="tractorasDao" />
	</bean>
	
	<bean id="tractorasDao"
		class="mx.com.vgati.ccmx.vinculacion.tractoras.dao.imp.TractorasDaoJdbcImp" >
		<property name="dataSource" ref="dataSource" /> 
	</bean>

</beans>