<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

	<!-- Datasource configuration -->
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/VinculacionDs" />

	<!-- Tiles configuration -->
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/config/tiles/tiles.xml</value>
				<value>/WEB-INF/config/tiles/login-tiles.xml</value>
				<value>/WEB-INF/config/tiles/publico-tiles.xml</value>
				<value>/WEB-INF/config/tiles/ccmx-tiles.xml</value>
				<value>/WEB-INF/config/tiles/tractoras-tiles.xml</value>
				<value>/WEB-INF/config/tiles/pymes-tiles.xml</value>
				<value>/WEB-INF/config/tiles/consultoras-tiles.xml</value>
				<value>/WEB-INF/config/tiles/coordinador-consultorias-tiles.xml</value>
				<value>/WEB-INF/config/tiles/coordinador-diplomados-tiles.xml</value>
			</list>
		</property>

		<property name="preparerFactoryClass"
			value="org.springframework.web.servlet.view.tiles2.SpringBeanPreparerFactory" />
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.tiles2.TilesView" />
	</bean>

</beans>
