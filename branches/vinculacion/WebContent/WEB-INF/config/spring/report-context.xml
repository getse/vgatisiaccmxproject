<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<bean id="ReportAction" class="mx.com.vgati.ccmx.vinculacion.report.action.ReportAction"
		scope="prototype">
		<property name="reportService" ref="reportService" />
		<property name="initService" ref="initService" />
	</bean>

	<bean id="reportService"
		class="mx.com.vgati.ccmx.vinculacion.report.service.imp.ReportServiceImp">
		<property name="reportDao" ref="reportDao" />
	</bean>

	<bean id="reportDao"
		class="mx.com.vgati.ccmx.vinculacion.report.dao.imp.ReportDaoJdbcImp">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>